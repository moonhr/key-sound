{
  "name": "app",
  "version": "0.1.0",
  "main": "build/main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && tsc -p tsconfig.electron.json",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "electron": "tsc -p tsconfig.electron.json && electron .",
    "electron-build": "next build && tsc -p tsconfig.electron.json && electron ."
  },
  "dependencies": {
    "axios": "^1.7.5",
    "next": "^14.2.13",
    "react": "^18",
    "react-dom": "^18",
    "tone": "^15.0.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^7.0.0",
    "electron": "^32.0.2",
    "electron-builder": "^25.0.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.yourapp.id",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
